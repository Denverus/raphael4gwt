<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.main {
		border-top: 3px solid #ededed;
		}
		.box1 {
		/*position: relative;
		left: 30%;
		top: 0px;
		width: 30%;*/
		}
		.box2 {
		/*position: relative;
		left: 30%;
		top: 20px;
		width: 30%;*/
		border-top: 3px solid #ededed;
		border-bottom: 3px solid #ededed;
		padding-top: 5px;
padding-bottom: 5px;
		}
		.box3 {
		/*text-align: center;*/
		}
.code {
display: none;
width: 100%;
height: 300px;
overflow:scroll;
margin-left: 20px;
color: white;
background-color: black;
}
	</ui:style>
	<g:HTMLPanel styleName="main">
		<div class="{style.main}">

			<div class="{style.box1}">
				<div class="{style.box3}">
				<b>Example
						<span ui:field="testNameEl"></span>
					</b>
					<i>Description:
						<span ui:field="descrEl"></span>
					</i>
				
<!-- 					<br /> -->
					<g:Button ui:field="seeSources">See Sources</g:Button>
				</div>
			</div>

			<div class="{style.box2}">
			<table><tr>
			<td><g:VerticalPanel ui:field="panel"></g:VerticalPanel></td>
			<td><pre  class="{style.code}" ui:field="code"></pre></td>
			</tr></table>
				
			</div>

		</div>
	</g:HTMLPanel>
</ui:UiBinder> 